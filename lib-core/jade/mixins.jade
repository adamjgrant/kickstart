mixin page($controller, $action, $variant)
  div(
      data-controller="#{$controller}"
      data-action="#{$action}"
      data-variant="#{$variant}"
  )
    if block
      block

mixin component($name, $variant)
  div(data-component="#{$name}" data-variant="#{$variant}")
    if block
      block

mixin block($name, $variant)
  div(data-block="#{$name}" data-variant="#{$variant}")
    if block
      block
